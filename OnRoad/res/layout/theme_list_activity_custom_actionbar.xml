<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:background="@color/transparent">
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="left">
        <LinearLayout 
            android:id="@+id/theme_action_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/splash_btn_bg_selector">            
            <ImageView 	            
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/abc_ab_back_black"
	            android:background="@color/transparent"
	            android:layout_marginLeft="12dp"
		        android:layout_marginRight="12dp"
	            />
            
        </LinearLayout>
         <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">
            
            <TextView 
	            android:id="@+id/theme_abc_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	           	android:textColor="@color/theme_list_ab_title_color"
	           	android:text="@string/theme_list_ab_title_text"
	           	android:textSize="@dimen/guid_regin_text_size"
	            />
         </LinearLayout>
        
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="right">
        
        <LinearLayout 
            android:id="@+id/theme_action"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/splash_btn_bg_selector">
            <ImageView 	     
                android:id="@+id/theme_overflow"       
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/ico_notice_location"
	            android:background="@color/transparent"
	            android:layout_marginLeft="12dp"
		        android:layout_marginRight="12dp"
	            />
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>
