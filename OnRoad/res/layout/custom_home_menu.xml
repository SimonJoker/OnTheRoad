<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <FrameLayout 
        android:layout_width="match_parent"
    	android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/no_input_layout"
            android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="horizontal">
	        
            <LinearLayout
                android:id="@+id/ab_title_layout" 
                android:layout_width="0dp"
		 	    android:layout_height="match_parent"
		 	    android:layout_weight="1"
		 	    android:layout_gravity="right"
		 	    >
                <TextView 
                    android:id="@+id/ab_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/home_activity_ab_title_text_size"
                    android:textColor="@color/home_menu_item_text_color"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
			        android:layout_marginBottom="10dp"/>
            </LinearLayout>
            
            <LinearLayout 
		 	    android:id="@+id/action_discover_layout"
		 	    android:layout_width="wrap_content"
		 	    android:layout_height="match_parent"
		 	    android:layout_gravity="right"
			    android:clickable="true"
			    android:background="@drawable/menu_action_discover_selector_bg_to_gray"
			    android:gravity= "center_vertical"
			    android:orientation="horizontal">
		 	    <ImageView 
			        android:id="@+id/action_discover"
			        android:layout_width="wrap_content"
			        android:layout_height="match_parent"
			        android:src="@drawable/action_search"
			        android:layout_marginLeft="10dp"
			        android:layout_marginRight="10dp"
			        />
	 		</LinearLayout>
        </LinearLayout>
        
 		
        
        <LinearLayout 
	        android:id="@+id/discvoer_input_layout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:gravity="bottom"
	        android:orientation="horizontal"
	        android:visibility="gone"
	        android:paddingLeft="14dp">
		    
	        <EditText 
	            android:id="@+id/discover_inputt"
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:hint="@string/discover_input_hint_text"
	            android:drawableRight="@drawable/action_search"
	            android:textSize="14sp"
	            android:layout_marginTop="6dp"/>
	       	</LinearLayout>
        
    </FrameLayout>
 	        
</LinearLayout>
