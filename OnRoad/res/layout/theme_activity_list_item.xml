<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical"  xmlns:app="http://schemas.android.com/apk/res/org.chinenv.onroad"
    >
    <LinearLayout 
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp">
        
        <org.chinenv.onroad.weight.MyThemeListViewPager
            android:id="@+id/theme_list_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            
            />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/theme_list_activity_margin_leftright"
            android:gravity="right">
            <ImageView 
                android:id="@+id/wish_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            	android:layout_marginRight="10dp"
            	android:background="#00000000"/>
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom">
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="left"
		            android:layout_marginLeft="@dimen/theme_list_activity_margin_leftright"
		            android:background="#a9000000"
		            android:orientation="horizontal"
		            android:gravity="center">
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="@string/theme_list_price_text"
		                android:textSize="16sp"
		                android:layout_marginLeft="4dp"
		                android:layout_marginTop="4dp"
		                android:layout_marginBottom="4dp"
		                android:textColor="#ffffffff"/>
		            <TextView
		                android:id="@+id/price"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginRight="4dp"
		                android:layout_marginTop="4dp"
		                android:layout_marginBottom="4dp"
		                android:text="0.0"
		                android:textSize="24sp"
		                android:textColor="#ffffffff"/>
	
		        </LinearLayout>
		        
	            <LinearLayout 
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginRight="@dimen/theme_list_activity_margin_leftright"
	                android:gravity="right"
	                >
		             <de.hdodenhof.circleimageview.CircleImageView xmlns:android="http://schemas.android.com/apk/res/android"
	                    android:id="@+id/theme_list_user_icon"
	                    android:layout_width="40dp"
	                    android:layout_height="40dp"
	                    android:src="@drawable/hugh"
	                    android:layout_marginRight="10dp"
	                    app:border_width="1px"
	                    app:border_color="@color/light"
	                    />
	                
	            </LinearLayout>
	            
	            <LinearLayout 
	            	 android:layout_width="match_parent"
	                 android:layout_height="wrap_content"
	                 android:layout_marginLeft="10dp">
		             <TextView 
		                 android:id="@+id/description"
		                 android:layout_width="match_parent"
		                 android:layout_height="match_parent"
		                 android:text="Flat near Chaamps-Elysees"
		                 android:textColor="@color/theme_list_description_text_color"
		                 android:textSize="@dimen/theme_list_activity_content_text_size"
		                 android:layout_marginLeft="@dimen/theme_list_activity_margin_leftright"
		                 />
	          	</LinearLayout>
	            
	            <LinearLayout 
	            	 android:layout_width="match_parent"
	                 android:layout_height="wrap_content"
	                 android:layout_marginTop="8dp"
	                 android:layout_marginLeft="10dp">
		             <TextView 
		                 android:id="@+id/evaluate"
		                 android:layout_width="match_parent"
		                 android:layout_height="match_parent"
		                 android:text="公用空间·4评价 - Paris"
		                 android:textColor="@color/theme_list_evaluate_text_color_gray"
		                 android:textSize="14sp"
		                 android:layout_marginLeft="@dimen/theme_list_activity_margin_leftright"
		                 android:layout_marginBottom="10dp"
		                 />
	          	</LinearLayout>
	          	
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    
</FrameLayout>
